PORT=8080

#Firebase related variables
# Set to 'emulator' for local testing with Firebase emulator (accepts unsigned tokens)
# Set to 'production' (or omit) for real Firebase auth with signature verification
FIREBASE_AUTH_MODE=emulator
FIREBASE_PROJECT_ID=brave-the-waves-authentication
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n MOCK KEY -----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

#MongoDB related variables
CONNECTION_STRING=your_mongodb_connection_string
USERNAME=your_mongodb_username
PASSWORD=your_mongodb_password

#Stripe related variables
STRIPE_TEST_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_DEPLOYMENT_SECRET_KEY=sk_live_your_stripe_deployment_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret